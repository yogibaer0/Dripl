{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,             // easier debugging in prod logs
    "noEmitOnError": false,        // still emit JS even if types complain (CI keeps building)
    "types": ["node"]              // make Node types explicit
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


